<h1>Invitations</h1>
</br>
<br>
<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
  <thead class="thead-dark">
    <tr>
    <th>Recipient email</th>
    <th>Recipient Name</th>
    <th>Agent Name</th>
    <th>Property</th>
    <th>Lock code ID</th>
    <th colspan="3"><center>Actions</th>
    </tr>
  </thead>


  <tbody>
    <% @invitations.each do |invitation| %>
      <tr>
        <td><%= invitation.recipient_email %></td>
        <td><%= invitation.recipient_name %></td>
        <td><%= invitation.agent.agent_name %></td>
        <td><%= invitation.property_id %></td>
        <td><%= invitation.lock_code_id %></td>
        <td><%= link_to 'Show', invitation, class:"btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_invitation_path(invitation), class:"btn btn-info" %></td>
        <td><%= button_to 'Destroy', invitation, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


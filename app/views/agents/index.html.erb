<p style="color: green"></p>

<h1>Agents</h1>

</br>
<br\>
<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
  <thead class="thead-dark">
    <tr>
    
      <th>Agent name</th>
      <th>Role</th>
      <th>Email</th>
      <th>Phone number</th>
      <th>Company Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @agents.each do |agent| %>
      <tr>
     
        <td><%= agent.agent_name %></td>
        <td><%= agent.role %></td>
        <td><%= agent.email %></td>
        <td><%= agent.phone_number %></td>
        <td><%= agent.company.company_name %></td>
        <td><%= link_to 'Show', agent, class:"btn btn-success"%></td>
        <td><%= link_to 'Edit', edit_agent_path(agent) , class:"btn btn-info"%></td>
        <td><%= button_to 'Destroy', "/agents/#{agent.id}", method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
